<div>
  <h3 class="text-center font-weight-normal" style="">Sign in to interact and create posts</h3>
</div>
{{#if !logged_in}}
{{#each post as |posts| }}
<div class="card d-flex justify-content-center" style="width:24rem; hight: 10rem;">
  <div class="card-body">
    <h2 class="card-title">{{posts.name}}  {{posts.date_created}}</h2>
  </div>
</div>
{{/each}}
{{/if}}
{{#if logged_in}}
{{#each post as |posts| }}
<button class="card d-flex justify-content-center" style="width:24rem; hight: 10rem;" value="{{posts.id}}">
  <div class="card-body">
    <h2 class="card-title">{{posts.name}}  {{posts.date_created}}</h2>
  </div>
</button>
{{/each}}
<script ref="/js/postview.js"></script>
{{/if}}